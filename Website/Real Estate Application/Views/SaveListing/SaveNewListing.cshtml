@section Styles {
    <link href="~/Styles/SaveNewListing.css" rel="stylesheet" type="text/css" />
}

@using (Html.BeginForm())
{
    <h1>Create Listing</h1>
    <div class="parent">
        <div class="child">
            <div class="input_container">
                <label for="SIN">Social Insurance Number:</label>
                <input type="text" id="SIN" />
            </div>

            <div class="input_container">
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" />
            </div>

            <div class="input_container">
                <label for="middleName">Middle Name:</label>
                <input type="text" id="middleName" />
            </div>

            <div class="input_container">
                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" />
            </div>

            <div class="input_container">
                <label for="loggedInUserName">Logged In User Name:</label>
                <input type="text" id="loggedInUserName" />
            </div>

            <div class="input_container">
                <label for="streetAddress">Street Address:</label>
                <input type="text" id="streetAddress" />
            </div>

        </div>
        <div class="child">
            <div class="input_container">
                <label for="province">Province:</label>
                <input type="text" id="province" />
            </div>

            <div class="input_container">
                <label for="postalCode">Postal Code:</label>
                <input type="text" id="postalCode" />
            </div>

            <div class="input_container">
                <label for="homePhone">Home Phone:</label>
                <input type="text" id="homePhone" />
            </div>

            <div class="input_container">
                <label for="cellPhone">Cell Phone:</label>
                <input type="text" id="cellPhone" />
            </div>

            <div class="input_container">
                <label for="officeEmail">Office Email:</label>
                <input type="text" id="officeEmail" />
            </div>

            <div class="input_container">
                <label for="chkContract">Contract Signed:</label>
                <input type="checkbox" id="chkContract" />
            </div>

        </div>
    </div>

    <div id="btn_container">
        <button type="submit" id="btn_Cancel">Cancel</button>
        <button type="submit" id="btn_Add">Add Images</button>
        <button type="submit" id="btn_Create">Create</button>
    </div>
}

