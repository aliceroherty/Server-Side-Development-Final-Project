<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <!--Custom Stylesheet-->
    <link rel="stylesheet" type="text/css" href="~/Styles/LayoutStyles.css" />

    <!--Dynamic Stylesheet-->
    @RenderSection("Styles", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-light">
        <div class="container">
            <div class="navbar-header">
                <a href="/" class="navbar-brand">
                    <img src="~/Images/logo.png" alt="Logo" id="logo" />
                </a>
                <button type="button" class="navbar-toggle bg-info" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/CreateCustomer/Index" class="nav-item">Create Customer</a></li>
                    <li><a href="/CreateAgent/Index" class="nav-item">Create Agent</a></li>
                    <li><a href="/SaveListing/Index" class="nav-item">Save Listing</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Stellar Real Estate</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!--Dynamic Script-->
    @RenderSection("Scripts", false)
</body>
</html>